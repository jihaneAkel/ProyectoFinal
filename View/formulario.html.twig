{% extends 'base.html.twig' %}

{% block contenidoIzquierda %}
    <form action="../Controller/grabaLibro.php"  enctype="multipart/form-data" method="POST">

        <h3>Imagen</h3>
        <input type="file" id="imagen" name="imagen">
        <h3>Isbn</h3>
        <input type="number" size="40" name="isbn">
        <h3>autor</h3>
        <input type="text" size="40" name="autor">
        <h3>Título</h3>
        <input type="text" size="40" name="titulo">
        <h3>Tipo</h3>
        <select name="tipo">
            <option value="arte">Arte</option>
            <option value="historia">Historia</option>
            <option value="ficcion">Ficcion</option>
            <option value="literatura">Literatura</option>
            <option value="novela">Novela</option>
        </select> 

        <br><h3>Descripción</h3>
        <textarea name="descripcion" cols="60" rows="6">
        </textarea><hr>
        <input type="submit" value="Aceptar">
    </form>



{% endblock %}







