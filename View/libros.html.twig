                modal: true,
                buttons: {
                    "Delete": function () {
                        console.log(isbn);
                        $.ajax({
                            type: "POST",
                            url: "../Controller/borrarLibro.php",
                            data: "isbn=" + isbn,
                            success: function (data) {
                                $(".container").html(data);
                            }
                        });
                        $(this).dialog("close");
                    },
                    Cancel: function () {
                        $(this).dialog("close");
                    }
                }


            });
